<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/departure_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:background="@drawable/bg_white_opacity70"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@id/arrow_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/departure_title"
            style="@style/Montserrat_Bold_Black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:focusable="true"
            android:text="@string/departure"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/departure_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/departure_value"
            style="@style/Montserrat_Bold_Parliament"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:focusable="true"
            android:text="@string/pick_country"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/departure_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/departure_title" />

        <ImageView
            android:id="@+id/departure_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_country_down_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_country_right_arrow"
        app:layout_constraintBottom_toBottomOf="@id/departure_card"
        app:layout_constraintEnd_toStartOf="@id/destination_card"
        app:layout_constraintStart_toEndOf="@id/departure_card"
        app:layout_constraintTop_toTopOf="@id/departure_card" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/destination_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:background="@drawable/bg_white_opacity70"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/arrow_icon"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/destination_title"
            style="@style/Montserrat_Bold_Black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:focusable="true"
            android:text="@string/destination"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/destination_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/destination_value"
            style="@style/Montserrat_Bold_Parliament"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:focusable="true"
            android:text="@string/pick_country"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/destination_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/destination_title" />

        <ImageView
            android:id="@+id/destination_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_country_down_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/risk_label"
        style="@style/Montserrat_Bold_White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/departure_card"
        tools:text="High Risk" />

</androidx.constraintlayout.widget.ConstraintLayout>
