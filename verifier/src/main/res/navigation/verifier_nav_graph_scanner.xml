<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_scanner"
    app:startDestination="@+id/nav_qr_scanner">

    <fragment
        android:id="@+id/nav_qr_scanner"
        android:name="nl.rijksoverheid.dcbs.verifier.ui.scanner.VerifierQrScannerFragment"
        tools:layout="@layout/fragment_scanner">

        <action
            android:id="@+id/action_scan_result_valid"
            app:destination="@id/nav_scan_result_valid"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_scan_result_invalid"
            app:destination="@id/nav_scan_result_invalid"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_country_picker"
            app:destination="@id/nav_country_picker"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_color_code_picker"
            app:destination="@id/nav_color_code_picker"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

    </fragment>

    <fragment
        android:id="@+id/nav_scan_result_invalid"
        android:name="nl.rijksoverheid.dcbs.verifier.ui.scanner.ScanResultInvalidFragment"
        tools:layout="@layout/fragment_scan_result_invalid">

        <argument
            android:name="invalidData"
            app:argType="nl.rijksoverheid.dcbs.verifier.ui.scanner.models.ScanResultInvalidData" />

        <action
            android:id="@+id/action_nav_main"
            app:destination="@id/nav_main"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit"
            app:popUpTo="@id/nav_main"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_country_picker"
            app:destination="@id/nav_country_picker"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_invalid_screen_to_scan_instructions"
            app:destination="@id/nav_invalid_screen_to_scan_instructions"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_color_code_picker"
            app:destination="@id/nav_color_code_picker"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

    </fragment>

    <fragment
        android:id="@+id/nav_scan_result_valid"
        android:name="nl.rijksoverheid.dcbs.verifier.ui.scanner.ScanResultValidFragment"
        tools:layout="@layout/fragment_scan_result_valid">

        <argument
            android:name="validData"
            app:argType="nl.rijksoverheid.dcbs.verifier.ui.scanner.models.ScanResultValidData" />

        <action
            android:id="@+id/action_nav_main"
            app:destination="@id/nav_main"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit"
            app:popUpTo="@id/nav_main"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_country_picker"
            app:destination="@id/nav_country_picker"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_color_code_picker"
            app:destination="@id/nav_color_code_picker"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

    </fragment>

    <fragment
        android:id="@+id/nav_country_picker"
        android:name="nl.rijksoverheid.dcbs.verifier.ui.pickers.CountryPickerFragment"
        tools:layout="@layout/fragment_country_picker" />

    <fragment
        android:id="@+id/nav_color_code_picker"
        android:name="nl.rijksoverheid.dcbs.verifier.ui.pickers.ColorCodePickerFragment"
        tools:layout="@layout/fragment_color_code_picker" />

    <fragment
        android:id="@+id/nav_invalid_screen_to_scan_instructions"
        android:name="nl.rijksoverheid.dcbs.verifier.ui.scanqr.scaninstructions.ScanInstructionsFragment"
        android:label="@string/scan_instructions"
        tools:layout="@layout/fragment_scan_instructions">

        <argument
            android:name="showInvalidItem"
            app:argType="boolean" />

    </fragment>

</navigation>
