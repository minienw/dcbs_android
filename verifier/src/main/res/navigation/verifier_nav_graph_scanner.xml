<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_scanner"
    app:startDestination="@+id/nav_qr_scanner">

    <fragment
        android:id="@+id/nav_qr_scanner"
        android:name="nl.rijksoverheid.dcbs.verifier.ui.scanner.VerifierQrScannerFragment"
        tools:layout="@layout/fragment_scanner">

        <action
            android:id="@+id/action_scan_result"
            app:destination="@id/nav_scan_result"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_destination_picker"
            app:destination="@id/nav_destination_picker"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_departure_picker"
            app:destination="@id/nav_departure_picker"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

    </fragment>

    <fragment
        android:id="@+id/nav_scan_result"
        android:name="nl.rijksoverheid.dcbs.verifier.ui.scanner.ScanResultFragment"
        tools:layout="@layout/fragment_scan_result">

        <argument
            android:name="data"
            app:argType="nl.rijksoverheid.dcbs.verifier.ui.scanner.models.ScanResultData" />

        <action
            android:id="@+id/action_nav_main"
            app:destination="@id/nav_main"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit"
            app:popUpTo="@id/nav_main"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_destination_picker"
            app:destination="@id/nav_destination_picker"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_invalid_screen_to_scan_instructions"
            app:destination="@id/nav_invalid_screen_to_scan_instructions"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_departure_picker"
            app:destination="@id/nav_departure_picker"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

    </fragment>

    <fragment
        android:id="@+id/nav_departure_picker"
        android:name="nl.rijksoverheid.dcbs.verifier.ui.pickers.DepartureFragment"
        tools:layout="@layout/fragment_departure_picker" />

    <fragment
        android:id="@+id/nav_destination_picker"
        android:name="nl.rijksoverheid.dcbs.verifier.ui.pickers.DestinationFragment"
        tools:layout="@layout/fragment_destination_picker" />

    <fragment
        android:id="@+id/nav_invalid_screen_to_scan_instructions"
        android:name="nl.rijksoverheid.dcbs.verifier.ui.scanqr.scaninstructions.ScanInstructionsFragment"
        android:label="@string/scan_instructions"
        tools:layout="@layout/fragment_scan_instructions">

        <argument
            android:name="showInvalidItem"
            app:argType="boolean" />

    </fragment>

</navigation>
